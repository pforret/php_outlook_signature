{
    "name": "pforret/php_outlook_signature",
    "description": "Create Outlook email signatures from a template",
    "keywords": [
        "pforret",
        "outlook",
        "email",
        "signature",
        "windows",
        "php_outlook_signature",
        "office365"
    ],
    "homepage": "https://github.com/pforret/php_outlook_signature",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Forret",
            "email": "peter@forret.com",
            "homepage": "https://github.com/pforret",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Pforret\\PhpOutlookSignature\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pforret\\PhpOutlookSignature\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
